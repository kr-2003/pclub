<% layout('layout/boilerplate') %>

<div style="background-color: white; height: 100vh;">
    <div class="row" style="margin-bottom: 40px;">
        <h1 class="text-center">REGISTER</h1>
        <div class="col-md-6 offset-3">
          <form class="needs-validation" action="/register" method="post" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control form-text" type="text" name="username" id="username" placeholder="Username" required>
              <div class="valid-feedback">
                Looks good!
              </div>
      
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">E-Mail</label>
              <input class="form-control" type=" text" name="email" id="email" placeholder="Email" required>
              <div class="valid-feedback">
                Looks good!
              </div>
      
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input class="form-control" type=" text" name="password" id="password" placeholder="password" required>
              <div class="valid-feedback">
                Looks good!
              </div>
      
      
      
            <br>
            <button class="btn btn-success" type="submit">Submit</button>
          </form>
        </div>
      </div>
      
</div>
